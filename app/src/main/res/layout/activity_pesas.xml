<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- CONTENIDO SCROLLABLE -->
    <ScrollView
        android:id="@+id/scrollRutinas"
        android:layout_above="@id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/layoutRutinas"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Primer recuadro: Añadir rutina -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/cardAgregarRutina"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:clickable="true"
                    android:background="@color/blanco_roto"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/imgAdd"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/logo_anadir"
                        android:contentDescription="Agregar rutina" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Añadir rutina"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Espacio vacío para que quede centrado si es único -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/blanco_roto"
                    android:visibility="invisible"/>
            </LinearLayout>

            <!-- Aquí se añadirán dinámicamente las tarjetas de rutina (2 por fila) -->

        </LinearLayout>
    </ScrollView>

    <!-- Menú de navegación inferior -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#d9272a"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="8dp">

        <ImageView
            android:id="@+id/navInicio"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/casa_menu"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/navPesas"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/pesa_nav"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/navRunning"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/running_nav"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/navPerfil"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/usuario_nav"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/navSalir"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/logout_nav"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>
